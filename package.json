{
  "name": "wesc",
  "version": "0.3.3",
  "description": "We are the Superlative Components!",
  "type": "module",
  "main": "src/index.js",
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": "./src/index.js",
    "./unshim": "./dist/unshim.js",
    "./server": "./dist/server.js",
    "./react": "./dist/react/index.js",
    "./astro": "./src/astro/index.js",
    "./astro/*": "./src/astro/*"
  },
  "repository": "luwes/wesc",
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "license": "MIT",
  "homepage": "https://github.com/luwes/wesc#readme",
  "bugs": {
    "url": "https://github.com/luwes/wesc/issues"
  },
  "scripts": {
    "lint": "npx eslint src/*.js -c ./node_modules/wet-run/.eslintrc.json",
    "test": "pta 'test/**/*.spec.js' --reporter tap",
    "dev": "wet serve --cors --redirect :examples/ & esbuild src/server.js src/unshim.js src/react/index.js src/react/render.js --format=esm --external:react --external:react-dom --external:./server.js --external:./render.js --outdir=dist --bundle --watch",
    "build": "esbuild src/server.js src/unshim.js src/react/index.js src/react/render.js --format=esm --external:react --external:react-dom --external:./server.js --external:./render.js --outdir=dist --bundle --minify --tree-shaking=true",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "esbuild": "^0.19.10",
    "pta": "^1.2.0",
    "wet-run": "^1.0.1",
    "zora": "^5.2.0"
  },
  "dependencies": {
    "linkedom": "github:luwes/linkedom#wesc"
  },
  "peerDependencies": {
    "react": "^17.0.2 || ^18",
    "react-dom": "^17.0.2 || ^18"
  }
}
